@model IEnumerable<Rock_Paper_Scissors.Models.Players>

@{
    ViewBag.Title = "TopTen";
}

<h2>Top Ten Player</h2>
@using (Html.BeginForm("ResetTable", "Play", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
<input type="submit" value="Reset Data" class="btn-info" />
}
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Points)
        </th>
        <th></th>
    </tr>
    @if (Model != null) { 
        foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Points)
        </td>
       
    </tr>
}}

</table>
